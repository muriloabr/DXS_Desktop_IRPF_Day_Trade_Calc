<Window x:Class="DXS_Desktop_IRPF_Day_Trade_Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXS_Desktop_IRPF_Day_Trade_Calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="btnLimpar" Click="btnLimpar_Click"  Height="50" Width="150" Margin="0,0,20,0">Limpar os resultados</Button>
            <Button Name="btnOpenFile" Click="btnOpenFile_Click"  Height="50" Width="100">Abrir Notas</Button>            
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <RadioButton Content="Notas Sintetizadas por Valor Negociado" Name="chkValorNegociado" Width="230" Height="15" Margin="20,0,0,0" IsChecked="True"/>
            <RadioButton Content="Somente  detalhes das Notas" Name="chkDetalhes" Width="180" Height="15" Margin="20,0,0,0"/>
            <RadioButton Content="Notas Sintetizadas por Incidência" Name="chkIncidencia" Width="200" Height="15" Margin="20,0,0,0"/>
        </WrapPanel>
        <TextBox Name="txtEditor" />
    </DockPanel>
</Window>
